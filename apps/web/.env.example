# ===================================
# Cernio Web Application Environment Variables
# ===================================
# Copy this file to .env and update with your actual values
# IMPORTANT: DO NOT commit .env to version control

# NOTE: All environment variables in Vite must be prefixed with VITE_
# They are exposed to the client-side code at build time

# -----------------------------------
# Backend API Configuration
# -----------------------------------
# Backend API base URL
VITE_API_URL=http://localhost:3000/api/v1

# WebSocket URL (for real-time features in Phase 4)
# VITE_WS_URL=ws://localhost:3000

# -----------------------------------
# Application Configuration
# -----------------------------------
VITE_APP_NAME=Cernio
VITE_APP_VERSION=0.1.0

# -----------------------------------
# Feature Flags
# -----------------------------------
# Enable/disable features for testing
VITE_FEATURE_MARKETPLACE_ENABLED=false
VITE_FEATURE_ANALYTICS_ENABLED=false

# -----------------------------------
# Third-Party Services
# -----------------------------------

# Stripe (Payments) - Phase 4
# Use publishable key (safe to expose on client)
# VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key

# Google Maps API (for address autocomplete) - Phase 1+
# VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Sentry (Error tracking) - Optional
# VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# VITE_SENTRY_ENVIRONMENT=development

# Google Analytics / PostHog / Mixpanel - Phase 5
# VITE_ANALYTICS_ID=your-analytics-id

# -----------------------------------
# Development Tools
# -----------------------------------
# Enable React DevTools profiler in production build
VITE_ENABLE_PROFILER=false

# Enable verbose logging
VITE_DEBUG_MODE=true
